<Window x:Class="csharp_example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csharp_example"
        mc:Ignorable="d"
        Title="CSharp" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Name="Formulario" VerticalAlignment="Center">
            <Label Content="_nombre" Target="{Binding ElementName=Nombre}"></Label>
            <TextBox Name="Nombre"></TextBox>
            <Label Content="_apellido" Target="{Binding ElementName=Apellido}"></Label>
            <TextBox Name="Apellido"></TextBox>

            <Button Click="Button_Click">Guardar</Button>
            <Button Click="Button_Click1">Enviar</Button>
        </StackPanel>

        <StackPanel Grid.Column="1" Name="Respuesta" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock></TextBlock>
        </StackPanel>
    </Grid>
</Window>
